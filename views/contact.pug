extends layouts/layout

block head
  link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css")
  script(src="https://cdn.jsdelivr.net/npm/just-validate@4.0.0/dist/just-validate.production.min.js")
  script(src="/js/scripts.js")
  style.
    .contact-section {
      flex: 1;
      display: flex;
      justify-content: center;
      align-items: center;
      padding: 40px 20px;
    }

    .contact-container {
      display: flex;
      gap: 40px;
      background: #1a1a1a;
      padding: 40px;
      border-radius: 12px;
      max-width: 1000px;
      width: 100%;
      box-shadow: 0 0 20px rgba(255, 215, 0, 0.2);
    }

    .contact-info {
      flex: 1;
    }

    .contact-info h2 {
      margin-bottom: 20px;
      font-size: 1.8rem;
      color: #FFD700;
    }

    .info-item {
      display: flex;
      align-items: center;
      background: rgba(255, 255, 255, 0.05);
      padding: 15px;
      border-radius: 10px;
      margin-bottom: 15px;
      transition: background 0.3s ease;
    }

    .info-item:hover {
      background: rgba(255, 255, 255, 0.1);
    }

    .info-item i {
      font-size: 20px;
      margin-right: 15px;
      padding: 12px;
      border-radius: 8px;
      color: #fff;
    }

    .info-item.email i {
      background: #00c4cc;
    }

    .info-item.phone i {
      background: #2ecc71;
    }

    .info-item.location i {
      background: #2979ff;
    }

    .info-text {
      display: flex;
      flex-direction: column;
    }

    .info-text strong {
      font-size: 16px;
      margin-bottom: 4px;
    }

    .info-text a {
      color: #00c4cc;
      text-decoration: none;
      transition: color 0.3s ease;
    }

    .info-text a:hover {
      color: #FFD700;
    }

    .social-links {
      display: flex;
      gap: 15px;
      margin-top: 20px;
    }

    .social-links a {
      width: 40px;
      height: 40px;
      background: rgba(255, 255, 255, 0.05);
      border-radius: 8px;
      display: flex;
      justify-content: center;
      align-items: center;
      transition: background 0.3s ease, transform 0.3s ease;
      color: #fff;
      font-size: 18px;
    }

    .social-links a:hover {
      background: #FFD700;
      transform: translateY(-3px);
    }

    .contact-form {
      flex: 1;
    }

    .contact-form h2 {
      font-size: 1.8rem;
      margin-bottom: 15px;
      color: #FFD700;
      text-align: center;
    }

    .contact-form p {
      text-align: center;
      margin-bottom: 20px;
      color: #aaa;
      font-size: 1rem;
    }

    form {
      display: flex;
      flex-direction: column;
      gap: 20px;
    }

    .form-group {
      display: flex;
      flex-direction: column;
    }

    label {
      margin-bottom: 5px;
      font-size: 0.9rem;
      color: #ccc;
    }

    input, textarea {
      padding: 12px;
      border: 1px solid #333;
      border-radius: 8px;
      background: #0d0d0d;
      color: #fff;
      font-size: 1rem;
      transition: border-color 0.3s ease;
    }

    input:focus, textarea:focus {
      border-color: #FFD700;
      outline: none;
    }

    textarea {
      resize: none;
      min-height: 120px;
    }

    button {
      background: #FFD700;
      color: #0d0d0d;
      padding: 12px;
      border: none;
      border-radius: 8px;
      font-size: 1rem;
      font-weight: 600;
      cursor: pointer;
      transition: background 0.3s ease;
    }

    button:hover {
      background: #e6c200;
    }

    @media (max-width: 768px) {
      .contact-container {
        flex-direction: column;
        padding: 20px;
      }
    }

block content
  section.contact-section
    .contact-container
      .contact-info
        h2 Thông tin liên hệ
        .info-item.email
          i.fas.fa-envelope
          .info-text
            strong Email
            span nguyenquocviet2004tb1@gmail.com
        .info-item.phone
          i.fas.fa-phone
          .info-text
            strong Điện thoại & Zalo
            span 0372751413
        .info-item.location
          i.fas.fa-map-marker-alt
          .info-text
            strong Vị trí
            span Quận Thanh Xuân, Hà Nội
        .social-links
          a(href="#" target="_blank")
            i.fab.fa-facebook-f
          a(href="https://www.linkedin.com/" target="_blank")
            i.fab.fa-linkedin-in
      .contact-form
        h2 Contact Me
        p Have a question or want to work together? Fill out the form below!
        form#contact-form
          .form-group
            label(for="name") Full Name
            input#name(type="text" name="name" placeholder="Enter your name" required)
          .form-group
            label(for="email") Email Address
            input#email(type="email" name="email" placeholder="Enter your email" required)
          .form-group
            label(for="title") Title
            input#title(type="text" name="title" placeholder="Enter title" required)
          .form-group
            label(for="message") Message
            textarea#message(name="message" placeholder="Write your message here..." required)
          button(type="submit") Send Message



