extends layouts/layout

block head
  link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css")
  script(src="/js/scripts.js")
  style.
    a {
      text-decoration: none;
      color: inherit;
    }

    .hero {
      flex: 1;
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 40px 60px;
      max-width: 1200px;
      margin: 0 auto;
      gap: 50px;
    }

    .hero-text {
      flex: 1;
      margin-right: 100px;
    }

    .hero-text h3 {
      font-size: 1rem;
      color: #FFD700;
      margin-bottom: 10px;
    }

    .hero-text h1 {
      font-size: 3rem;
      font-weight: 700;
      margin-bottom: 15px;
      white-space: nowrap;
    }

    .hero-text h2 {
      font-size: 1.5rem;
      color: #ccc;
      margin-bottom: 20px;
      min-height: 35px;
    }

    .hero-text h2 span {
      color: #FFD700;
      font-weight: 600;
      border-right: 2px solid #FFD700;
      padding-right: 5px;
      white-space: nowrap;
      overflow: hidden;
    }

    .hero-text p {
      font-size: 1rem;
      color: #aaa;
      line-height: 1.6;
    }

    .hero-image {
      position: relative;
      flex: 1;
      display: flex;
      justify-content: center;
      align-items: center;
    }

    .hero-image img {
      width: 280px;
      height: 280px;
      border-radius: 50%;
      border: 4px solid #FFD700;
      box-shadow: 0 0 40px rgba(255, 215, 0, 0.5);
      transition: transform 0.3s ease, box-shadow 0.3s ease;
      margin-left: 50px;
    }

    .hero-image img:hover {
      transform: scale(1.05);
      box-shadow: 0 0 60px rgba(255, 215, 0, 0.8);
    }

    .projects-section {
      padding: 50px 20px;
      max-width: 1200px;
      margin: 0 auto;
    }

    .projects-header {
      text-align: center;
      margin-bottom: 30px;
    }

    .projects-header h2 {
      font-size: 24px;
      font-weight: 700;
      margin-bottom: 8px;
    }

    .projects-header p {
      font-size: 14px;
      color: #bbb;
    }

    .projects-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
      gap: 20px;
    }

    .project-card {
      background: #1e1e1e;
      border-radius: 12px;
      overflow: hidden;
      transition: transform 0.3s ease, box-shadow 0.3s ease;
      display: flex;
      flex-direction: column;
      text-align: left;
    }

    .project-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 8px 16px rgba(255, 255, 255, 0.1);
    }

    .project-image img {
      width: 100%;
      display: block;
      border-bottom: 1px solid #333;
    }

    .project-content {
      padding: 15px;
      display: flex;
      flex-direction: column;
      gap: 8px;
    }

    .project-content h3 {
      font-size: 18px;
      font-weight: 600;
    }

    .project-content p {
      font-size: 14px;
      color: #aaa;
      line-height: 1.4;
    }

    .tech-stack {
      font-size: 13px;
      color: #f1c40f;
      font-weight: 500;
    }

    .project-links {
      display: flex;
      gap: 10px;
      margin-top: 10px;
    }

    .project-links a {
      color: #bbb;
      transition: color 0.3s ease;
      font-size: 16px;
    }

    .project-links a:hover {
      color: #f1c40f;
    }

    .footer {
      background: #1e1e1e;
      text-align: center;
      padding: 20px;
      font-size: 14px;
      color: #bbb;
      margin-top: 40px;
    }

    @media (max-width: 768px) {
      .hero {
        flex-direction: column;
        text-align: center;
      }

      .hero-text h1 {
        font-size: 2.5rem;
      }

      .hero-image img {
        width: 220px;
        height: 220px;
      }
    }

